#lines
    font-size               logFontSize
    -webkit-user-select     text
    flex                    1 1 0
    // overflow                auto
    overflow                visible
    padding-left            6px
    & div    
        &.filtered    
            display         none
        width               100%
        white-space         nowrap
        overflow            hidden
        & span
            vertical-align  top
            padding-right   12px
            display         inline-block
            cursor          pointer 
            
            &.find
                padding-right 0
            
            &.highlight
                padding             0
            
            &.icon
                min-width           1.3em
                margin              0
                position            relative
                padding-right       0px
                & img
                    margin-top      -2px
                    margin-bottom   -2px
                    height          100%
            &.sep
                text-align          center
                min-width           2em
                width               2em
                padding-right       0px
            &.log
                cursor              text
                white-space         pre
                padding-left        2px
            &.num
                min-width           2ex
            &.time
                min-width           4ex
            &.id
                min-width           8ex
            &.file
                min-width           15ex
                max-width           15ex
            &.src
                text-align          right
                float               right
                & .ln
                    min-width       30px
                & .col
                    min-width       30px
            &.name
                min-width           100px

