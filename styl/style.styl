#lines
    -webkit-user-select text
    flex                1 1 0
    overflow            auto
    padding-left        6px
    & div
        width           100%
        white-space     nowrap
        & span
            padding-right    4px
            display     inline-block

            &.icon
                cursor              pointer
                vertical-align      middle
                min-width           22px
                margin              0
                & img
                    margin-top      -2px
                    margin-bottom   -2px
                    height          22px
            &.log
                margin-left         22px
                white-space         pre
                vertical-align      top
                padding-left        2px
                &::before
                    margin-left     -22px
                    content         "â¯ˆ "
            &.num
                min-width           18px
                display             none // <<<
            &.id
