#lines
    font-size           logFontSize
    -webkit-user-select text
    flex                1 1 0
    overflow            auto
    padding-left        6px
    & div
        width           100%
        white-space     nowrap
        & span
            padding-right    12px
            display     inline-block
            vertical-align top
                
            &.icon
                cursor              pointer
                min-width           22px
                margin              0
                position            relative
                & img
                    margin-top      -2px
                    margin-bottom   -2px
                    height          100%
            &.log
                margin-left         22px
                white-space         pre
                padding-left        2px
                &::before
                    vertical-align  top
                    margin-left     -22px
                    content         "â¯ˆ "
            &.num
                min-width           18px
            &.id
                min-width           60px
            &.file
                min-width           100px
            &.src
                text-align          right
                float               right
                & .ln
                    min-width           30px
                & .col
                    min-width           30px
            &.name
                min-width           100px

